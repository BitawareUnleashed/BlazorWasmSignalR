@page "/"
@inject HttpClient Http
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager NavigationManager
@implements IAsyncDisposable


<h1>Hello, world!</h1>
<p>Time of the day: <strong>@Watch</strong></p>

@*NEWS*@
@if (news is null)
{
    <p>Loading news...</p>
}
else
{
    <div>
        <p><h1>@news.title</h1></p>
        <p>From: @news.source.name</p>
        <div>
            <p>@news.content</p>
            <p> <a href="@news.url" target="_blank">Leggi notizia completa</a> </p>

            <p></p>
            <img src="@news.urlToImage"/>
        </div>

    </div>
}
